import torch
import torch.nn as nn
import torch.optim as optim

# Define the model
class FinancialTrustScoreModel(nn.Module):
    def __init__(self, input_dim):
        super(FinancialTrustScoreModel, self).__init__()
        self.fc1 = nn.Linear(input_dim, 128)
        self.fc2 = nn.Linear(128, 64)
        self.fc3 = nn.Linear(64, 1)  # Output: Trust Score (0-100)
        self.relu = nn.ReLU()
        self.dropout = nn.Dropout(0.2)
        
    def forward(self, x):
        x = self.relu(self.fc1(x))
        x = self.dropout(x)
        x = self.relu(self.fc2(x))
        x = self.fc3(x)
        return x

# Model initialization
input_dim = 10  # Placeholder for feature size
model = FinancialTrustScoreModel(input_dim)
